<% if @question.answered_by?(current_user) %>
<% else %>
  <div class="col-md-8 answer-form">
    <%= form_with url:question_answers_path(question_id: question.id), model:[question, answer] do |f| %>

      <div class="form-group">
        <label class="control-label sr-only" for="question_answer_title">タイトル</label>
        <%= f.text_field :title, autofocus: true, class: "form-control", placeholder:"タイトルを入力してください" %>
      </div>

      <div class="form-group">
        <label class="control-label sr-only" for="question_answer_content">内容</label>
        <%= f.text_area :content, class: "form-control" %>
      </div>

      <%= f.submit '投稿する',  class:"btn btn-lg btn-block btn-primary shadow" %>

    <% end %>
  </div>
<% end %>