<%= form_with url:question_answers_path(question_id: question.id), model:[question, answer] do |f| %>
  
  <%= f.label :title %>
  <%= f.text_field :title, class: "form-control" %>

  <%= f.label :content %>
  <%= f.text_area :content, class: "form-control" %>

  <%= f.submit '投稿する', class:"btn btn-success" %>

<% end %>