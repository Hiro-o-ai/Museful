<%= link_to notification_path(notification), class: "dropdown-item border-bottom", method: :patch do %>
  <% if notification.read == "unread" %>
    <i class="fa fa-circle" aria-hidden="true" style="color: gold;"></i>
  <% end %>
  <%= attachment_image_tag notification.notifiable.user, :image, format:"jpeg", class: "rounded-circle mr-1", fallback: "no_image.jpg", size: "30x30" %>
    <%= "#{notification.notifiable.user.nickname}" %>があなたの記事にコメントしました
  <div class="text-right">
    <%= notification.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
  </div>
<% end %>