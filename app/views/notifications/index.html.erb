<%= render "layouts/user_header" %>

<% breadcrumb :nitification %>
<%= render "layouts/breadcrumbs" %>

<section>
  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-md-10 notification-board">
        <div class="notification-head">
          <div class="pin"></div>
          <div class="notification-title">
            <h2>通知</h2>
          </div>
        </div>
        <% if current_user.notifications.unread.present? %>
          <div class="offset-md-10">
            <%= link_to "全てを既読にする", all_read_path, method: :patch, class: "btn btn-primary btn-md shadow"%>
          </div>
        <% end %>
        <% if current_user.notifications.present? %>
          <% @notificatons.order(created_at: :desc).each do |notification| %>
            <%= render "notifications/#{notification.action}", notification: notification %>
          <% end %>
        <% else %>
          <div class="dropdown-item">
            お知らせはありません
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>