<%= render "layouts/user_header" %>
<h3>User info</h3>
<%= attachment_image_tag @user, :image, format:"jpeg", class: "img-circle pull-left profile-img", fallback: "no_image.jpg", size: "100x100" %>

<table class="table">
  <thead>
    <tr>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>nickname</td>
      <td> <%= @user.nickname %> </td>
      <td> <%= @user.flag %> </td>
    </tr>
  </tbody>
</table>
<% if @user == current_user %>
  <%= link_to edit_user_path(@user), class: "btn btn-block btn-default" do%><i class="glyphicon glyphicon-wrench"></i><% end %>
<% end %>
