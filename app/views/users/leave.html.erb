<%= render "layouts/user_header" %>

<% breadcrumb :leave_user, @user %>
<%= render "layouts/breadcrumbs" %>

<section>
  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="col-md-5 user-leave">
        <div class="pin"></div>
        <div class="leave-form">
          <h4 class="leave-title"><b>本当に退会しますか？</b></h4>
          <h5 class="leave-body">退会すると、ブックマークや履歴、<br>
          これまでの回答比率などが閲覧できなくなります。<br>
          退会する場合は「退会する」をクリックしてください。</h5>
          <div class="row leave-buttom" align="center">
            <div class="col-md-6">
              <%= link_to "退会しない",edit_user_path(@user), class: "btn btn-primary"%>
            </div>

            <div class="col-md-6">
              <%= form_with(url: user_leave_path, model: @user, local:true) do |f| %>
                <%= f.hidden_field :status, :value => "退会済" %>
                <%= f.submit "退会する",class: "btn btn-success"%>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
