<%= render "layouts/user_header" %>

<section>
  <div class="container-fluid">
    <div class="row justify-content-center">
      <div class="search-result shadow-lg">
        <%= form_tag(search_result_path, :method => "get" ) do %>
          <div class="input-group">
            <%= select_tag(:option, options_for_select([["記事", "2"],["質問","3"]])) %>
            <%= text_field_tag :search,params[:search], placeholder: "search" %>
            <%= button_tag(type: "submit") do %>
              <i class="fa fa-search" aria-hidden="true"></i>
            <% end %>
          </div>
        <% end %>
      </div>
      <% if @article_or_question == "2" %>
        <div class="col-md-10 article-board">
          <div class="article-head">
            <div class="pin"></div>
            <div class="article-title">
              <h2>Article</h2>
            </div>
          </div>
          <%= render "articles/article_list", articles: @articles %>
        </div>
      <% else %>
        <div class="col-md-10 question-board">
          <div class="question-head">
            <div class="pin"></div>
            <div class="question-title">
              <h2>Question</h2>
            </div>
          </div>
          <%= render "questions/question_list", questions: @questions %>
        </div>
      <% end %>
    </div>
  </div>
</section>