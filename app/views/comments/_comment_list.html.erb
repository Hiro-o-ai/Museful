<thead>
  <tr>
    <th>title</th>
    <th>rate</th>
    <th>answer</th>
    <th>time</th>
    <th></th>
  </tr>
</thead>
<tbody>
  <% question.answers.each do |answer| %>
    <tr class="answer-<%= answer.id %>">
      <td>
        <%= answer.title %>
      </td>
      <td>
        <div id="star-rate-<%= answer.id %>"></div>
      </td>
      <td>
        <%= answer.content %>
      </td>
      <td>
        <%= answer.created_at.strftime("%Y/%m/%d") %>
      </td>
      <td>
        <% if answer.user == current_user %>
          <%= link_to "Destroy", question_answers_path(question, answer), method: :delete, remote: true, class:"btn  btn-success btn-sm", "data-confirm" => "本当に削除してもよろしいですか？" %>
        <% end %>
      </td>
    </tr>
    <script>
      $('#star-rate-<%= answer.id %>').raty({
        size: 36,
        starOff:  '<%= asset_path('star-off.png') %>',
        starOn : '<%= asset_path('star-on.png') %>',
        starHalf: '<%= asset_path('star-half.png') %>',
        half: true,
        readOnly: true,
        score: <%= answer.rate %>,
      });
    </script>
  <% end %>
</tbody>
