
<% unless @article.commented_by?(current_user) %>
  <div class="col-md-11 comment-form">
    <%= form_with url:article_comments_path(article_id: article.id), model:[article, comment] do |f| %>

      <div class="form-group" id="star">
        <label class="control-label sr-only" for="article_comment_rate">評価</label>
        <%= f.hidden_field :rate %>
      </div>

      <div class="form-group">
        <label class="control-label sr-only" for="article_comment_content">内容</label>
        <%= f.text_area :content, class: "form-control" %>
      </div>

      <%= f.submit '評価する', class:"btn btn-lg btn-block btn-primary shadow" %>

    <% end %>
  </div>

  <script>
    $(document).on('turbolinks:load', function(){
      $('#star').raty({
        size     : 36,
        starOff:  '<%= asset_path('star-off.png') %>',
        starOn : '<%= asset_path('star-on.png') %>',
        starHalf: '<%= asset_path('star-half.png') %>',
        scoreName: 'comment[rate]',
        half: true,
      });
    });
  </script>
<% end %>
