<%= render "layouts/admin_header" %>

<h3>ジャンル一覧・追加</h3>

<%= render "admins/shared/error_messages", resource: @genre %>
<%= form_for(@genre,url: admins_genres_path) do |f| %>
  <%= f.label :name, "ジャンル" %>
  <%= f.text_field :name, autocomplete: "name" %>
  <label>
    <%= f.radio_button :flag, 1 %> 有効
  </label>
  <label>
    <%= f.radio_button :flag, 2 %> 無効
  </label>
  <%= f.submit "追加",class: "btn btn-primary btn-md" %>
<% end %>

<table class="table table-bordered">
  <thead>
    <th>ジャンル</th>
    <th>状態</th>
    <th></th>
  </thead>
  <tbody>
    <% @genres.each do |genre| %>
    <tr>
    <td>
      <%= genre.name %>
    </td>
    <td>
      <% if genre.flag == 1 %>
        有効
      <% else %>
        無効
      <% end %>
    </td>
    <td>
      <%= link_to "編集する",edit_admins_genre_path(genre.id), class: "btn btn-primary btn-md" %>
    </td>
    </tr>
    <% end %>
  </tbody>
</table>
