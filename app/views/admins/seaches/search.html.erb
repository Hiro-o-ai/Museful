<%= render "layouts/admin_header" %>

<div class="container-fluid admin">
  <div class="row justify-content-center">
    <div class="admin-search-result shadow-lg">
      <%= form_tag(admins_search_result_path, :method => "get" ) do %>
        <div class="input-group">
          <%= select_tag(:option, options_for_select([["会員", "1"],["記事","2"],["質問","3"]])) %>
          <%= text_field_tag :search,params[:search], placeholder: "search" %>
          <%= button_tag(type: "submit") do %>
            <i class="fa fa-search" aria-hidden="true"></i>
          <% end %>
        </div>
      <% end %>
    </div>
    <% if @user_or_article_or_question == "1" %>
      <%= render "admins/users/user_list", users: @users %>
    <% elsif @user_or_article_or_question == "2" %>
      <%= render "admins/articles/article_list", articles: @articles %>
    <% else %>
      <%= render "admins/questions/question_list", questions: @questions %>
    <% end %>
  </div>
</div>