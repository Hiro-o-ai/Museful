<%= render "layouts/admin_header" %>


<div class="container-fluid admin">
  <div class="row justify-content-center">
    <div class="col-md-4 admin-login-form">
      <div class="pin"></div>
      <div class="form-title">
        <h3><b>ログイン</b></h3>
      </div>

      <div class="form-body">
        <%= form_with(url: session_path(resource_name), model: resource, as: resource_name, local:true) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group">
            <label class="control-label sr-only" for="admin_email">メールアドレス</label>
            <%= f.email_field :email, autofocus: true, class: "form-control", placeholder:"メールアドレス" %>
          </div>

          <div class="form-group">
            <label class="control-label sr-only" for="admin_password">パスワード</label>
            <%= f.password_field :password, autofocus: true, class: "form-control", placeholder:"パスワード" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <%= f.submit "ログイン", class:"btn btn-lg btn-block btn-primary shadow" %>

        <% end %>
      </div>
    </div>
  </div>
</div>


