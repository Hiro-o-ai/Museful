<%= render "layouts/admin_header" %>

<div class="container-fluid admin">
  <div class="row justify-content-center">
    <div class="col-md-6 admin-user">
      <div class="pin"></div>
      <div class="admin-user-title">
        <h3><%= @user.nickname %>さんの会員情報編集</h3>
      </div>
      <%= form_with(url: admins_user_path, model: @user, local:true) do |f| %>
        <%= render "devise/shared/error_messages", resource: f.object %>

        <div class="form-group">
          <label class="control-label" for="user_nickname">ニックネーム</label>
          <%= f.text_field :nickname, autofocus: true, class: "form-control", placeholder:"ニックネーム"%>
        </div><br>

        <div class="form-group">
          <label class="control-label" for="user_status">ステータス</label><br>
          <label><%=f.radio_button :status, "有効" %>有効</label>
          <label><%=f.radio_button :status, "退会済" %>退会済</label>
        </div>

        <%= f.submit "編集内容を保存", class:"btn btn-lg btn-block btn-success shadow" %>

      <% end %>
    </div>
  </div>
</div>

