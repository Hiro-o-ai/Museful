<% if question.resonded_by?(current_user) %>
  <%= link_to question_responses_path(question), method: :delete, remote: true do %>
    <i class="fa fa-handshake-o" aria-hidden="true" style="color: #eb6101;"></i>
    <%= question.responses.count %> 共感した
  <% end %>
<% else %>
  <%= link_to question_responses_path(question), method: :post, remote: true do %>
    <i class="fa fa-handshake-o" aria-hidden="true"></i>
    <%= question.responses.count %> 共感した
  <% end %>
<% end %>